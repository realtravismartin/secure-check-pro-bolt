# Netlify Environment Variables
# Copy this file to .env for local development
# Set these in Netlify dashboard for production

# Stripe Configuration (Required)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# API Configuration (Optional - defaults to Netlify functions)
VITE_API_URL=/.netlify/functions

# Calendly Configuration (Optional)
VITE_CALENDLY_URL=https://calendly.com/your-username

# App Configuration (Optional)
VITE_APP_NAME=Secure Check Pro
VITE_SUPPORT_EMAIL=travis@disputeresolve.pro
VITE_SUPPORT_PHONE=(555) 012-3456

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_FACEBOOK_PIXEL_ID=XXXXXXXXXX

# Feature Flags (Optional)
VITE_ENABLE_CHAT_WIDGET=true
VITE_ENABLE_VIDEO_PROPOSALS=true
VITE_ENABLE_ADMIN_DASHBOARD=true

# Netlify-specific (Optional)
NETLIFY_SITE_ID=your-site-id-here
NETLIFY_AUTH_TOKEN=your-auth-token-here

# Development Environment (Optional)
VITE_NODE_ENV=development

